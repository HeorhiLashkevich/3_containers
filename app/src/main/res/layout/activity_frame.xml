<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">


        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/flag_of_austria_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_14"
            android:text="@string/austria"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="70dp"
            android:src="@drawable/flag_of_colombia_svg" />

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="70dp"
            android:text="@string/colombia"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="130dp"
            android:src="@drawable/flag_of_denmark_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="130dp"
            android:text="@string/denmark"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_180"
            android:src="@drawable/flag_of_italy_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="@dimen/dp_180"
            android:text="@string/italy"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="230dp"
            android:src="@drawable/flag_of_madagascar_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="230dp"
            android:text="@string/madagascar"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="280dp"
            android:src="@drawable/flag_of_poland_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="280dp"
            android:text="@string/poland"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="330dp"
            android:src="@drawable/flag_of_switzerland_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="330dp"
            android:text="@string/switzerland"
            android:textSize="@dimen/sp_30" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="380dp"
            android:src="@drawable/flag_of_thailand_svg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_154"
            android:layout_marginTop="380dp"
            android:text="@string/thailand"
            android:textSize="@dimen/sp_30" />

        <Button
            android:id="@+id/fromFrameToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:text="@string/to_mainactivity">

        </Button>


    </FrameLayout>
</androidx.core.widget.NestedScrollView>